<article class="big-entry clearfix">
  <%= link_to image_tag('http://www.placehold.it/320x220', class: 'responsive-img hover-effect'), vacancies[0], class: 'image-frame' %>
  <div class="entry-content">
    <span class="entry-meta">in:&nbsp;</span>
    <%= link_to vacancies[0].category.title, vacancies[0].category, class: 'entry-category' %>
    <span class="entry-meta">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
    <span class="entry-date"><%= vacancies[0].published_at.strftime('%d.%m.%Y') %></span>
    <h3 class="entry-title">
      <%= link_to vacancies[0].title, vacancies[0] %>
    </h3>
    <p><%= truncate(strip_tags(vacancies[0].body), length: 150, escape: false) %></p>
  </div><!--entry-content-->
</article>

